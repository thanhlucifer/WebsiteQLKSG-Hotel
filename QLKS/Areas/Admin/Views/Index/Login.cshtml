
@{
    Layout = null;
}
@model QLKS.Models.tblNhanVien
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login Admin</title>
    <link href="~/Content/Admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Admin/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Admin/css/sb-admin.css" rel="stylesheet">
</head>

<body class="bg-color">
        <div class="container">
            <div class="card card-login mx-auto mt-5">
                <div class="card-header header-cl"><b>Đăng nhập Admin QLKS</b></div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Index", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <label for="exampleInputEmail1">Username</label>
                            @Html.TextBoxFor(u => u.tai_khoan, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(u => u.tai_khoan)
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            @Html.PasswordFor(u => u.mat_khau, new { @class = "form-control" })
                            @Html.ValidationMessageFor(u => u.mat_khau)
                        </div>
                        <input class="btn btn-cl btn-block" type="submit" value="Đăng nhập" />
                    }
                </div>
            </div>
        </div>
        <script src="~/Content/Admin/vendor/jquery/jquery.min.js"></script>
        <script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/Content/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

<style>
    .bg-color {
         background: radial-gradient(circle, rgba(63, 94, 251, 1) 0%, rgba(252, 70, 107, 1) 100%);
    }

    .header-cl {
        color: #2F1C6A;
        text-align: center;
        font-size: 24px;
    }
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }



    .btn-cl {
        background-color: #6747c7 !important;
        color: #fff;
        font-size: 14px;
        cursor: pointer;
        padding: 15px 20px;
        font-weight:700;
    }

        .btn-cl:hover {
            border-color: #491BD5;
        }
   .form-group > label {
        color: #727596;
    }
 
</style>
</html>
