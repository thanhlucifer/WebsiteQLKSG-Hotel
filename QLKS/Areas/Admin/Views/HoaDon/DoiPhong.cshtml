@model QLKS.Models.tblPhieuDatPhong

@{
    ViewBag.Title = "Gia Hạn Phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item">
        <a href="@Url.Action("ListPhongDangHoatDong","Admin")">Phòng đang hoạt động</a>
    </li>
    <li class="breadcrumb-item active">Đổi phòng @Model.tblPhong.so_phong</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Đổi Phòng @Model.tblPhong.so_phong
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ResultDoiPhong", "HoaDon"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ma_pdp)
        <div class="form-group">
            @Html.Label("Đổi từ phòng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("ma_phong_cu",Model.tblPhong.so_phong, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Chuyển sang phòng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ma_phong_moi", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ma_phong, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-success">Xác nhận</button>
            </div>
        }
        </div>
    </div>